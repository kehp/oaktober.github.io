function handleDropEvent( ev, ui ) {
  let acornDropNumber = $(this).attr("data-oak-type");
  let acornChoiceNumber = $(ui.draggable).attr("data-oak-type");
  
  let idDrop = $(this).attr('id');
  let idDrag = $(ui.draggable).attr('id');
  
  let dropped = document.getElementById(idDrop);
  let dragged = document.getElementById(idDrag);
  
  if (acornDropNumber == acornChoiceNumber) {
  
    ui.draggable.draggable('disable');
    $(this).droppable('disable');
    ui.draggable.draggable('option', 'revert', false);
    dropped.appendChild(dragged);
    ui.draggable.position({of: $(this), my: 'center center', at: 'center center'});
    correctAnswers++;
   
  } 
  
if(correctAnswers == 27){
 document.getElementById("successMessage").style.display="block";
}
  
}//handleDropEvent


  


</script>

